%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
StarfireDiamond is StaticGem

constants:

   include blakston.khd

resources:

   gem_starfire_diamond_name_rsc = "starfire diamond"
   gem_starfire_diamond_icon_rsc = diamond.bgf
   gem_starfire_diamond_desc_rsc = \
	"Holy energy radiates from this shard of the heavens."
	
classvars:
   
   vrName = gem_starfire_diamond_name_rsc
   vrIcon = gem_starfire_diamond_icon_rsc
   vrDesc = gem_starfire_diamond_desc_rsc
   
   viResistanceType = -ATCK_SPELL_HOLY
   viResistanceStrength = 3
   
   viEmpowermentType = -ATCK_SPELL_HOLY
   viEmpowermentStrength = 6
   
   viMaxHealthIncrease = 2

properties:
   
messages:
   
   AttributeDesc()
   {
      AppendTempString("An attached ");
      AppendTempString(Send(self,@GetName));
      AppendTempString(" adds ");
      
      if viResistanceType <> 0
      {
         AppendTempString(viResistanceStrength);
         AppendTempString("\% ");
         AppendTempString(Send(SYS,@GetResistanceName,#type=viResistanceType));
      }

      AppendTempString(", ");
      
      if viEmpowermentType <> 0
      {
         AppendTempString(viEmpowermentStrength);
         AppendTempString("\% ");
         AppendTempString(Send(SYS,@GetEmpowermentName,
                          #type=viEmpowermentType));
      }

      AppendTempString(", and ");

      if viMaxHealthIncrease <> 0
      {
         AppendTempString(viMaxHealthIncrease);
         AppendTempString(" max health");
      }
      
      AppendTempString(". ");
      
      return;
   }

end
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
